{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}
    <h1>Mon profil</h1>
    <div class="container">
        <div class="row">
            <div class="col">
                <img src="{{asset(app_profile_picture_directory ~ '/' ~ user.profilePicture)}}">
            </div>
            <div class="col">
                {{ form_start(profileForm) }}
                {{ form_widget(profileForm) }}
                <button>Enregistrer</button>
                <a href="{{ path('user_profile', {'id': app.user.id}) }}">Annuler</a>
                {{ form_end(profileForm) }}
            </div>
        </div>
    </div>
{% endblock %}